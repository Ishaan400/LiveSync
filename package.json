{
  "name": "livesync-backend",
  "version": "1.0.0",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "test": "cross-env JWT_SECRET=testsecret jest --runInBand tests/auth.test.js tests/document.test.js",
    "test:integration": "cross-env JWT_SECRET=testsecret REDIS_URL=redis://localhost:6379 MONGO_URI=mongodb://localhost:27017/livesync jest --runInBand tests/websocket.test.js",
    "test:integration:up": "cross-env JWT_SECRET=testsecret docker compose up -d mongo redis api",
    "test:integration:down": "docker compose down"
  },
  "dependencies": {
    "@automerge/automerge": "^2.2.9",
    "axios": "^1.7.7",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.6.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "redis": "^4.7.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^10.0.0",
    "winston": "^3.14.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.0.0",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
